<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startup.SignUpBasicInfoActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/profilePhotoUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_user"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="40dp"
        />

    <ImageView
        android:id="@+id/uploadProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/profilePhotoUpload"
        app:layout_constraintLeft_toRightOf="@id/profilePhotoUpload"
        android:background="@drawable/ic_plus"
        />
    <EditText
        android:id="@+id/FistName"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/input_round_shape"
        android:hint="First Name"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:singleLine="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textColorHint="@color/text_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/inter_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePhotoUpload" />


    <EditText
        android:id="@+id/LastName"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/FistName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Last Name"
        android:singleLine="true"
        android:fontFamily="@font/inter_light"
        android:background="@drawable/input_round_shape"
        android:textColor="@color/black"
        android:textColorHint="@color/text_grey"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getStarted"
        android:layout_width="195dp"
        android:layout_height="53dp"
        android:background="@drawable/button_round_shape"
        android:text="@string/get_started"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LastName"
        android:layout_marginTop="75dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>